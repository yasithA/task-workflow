// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String    @id @default(uuid())
  name        String
  description String
  state       TaskState @default(Planned)
  comment     String?
}

enum TaskState {
  Planned
  InProgress
  Completed
  Paused
  Abandoned
}
